@section Styles
{
    <style type="text/css">
        /* HIDE RADIO */

        .tobehidden {
            position: absolute;
            opacity: 0;
            width: 0;
            height: 0;
        }

        /* IMAGE STYLES */
        [type=radio] + img {
            cursor: pointer;
        }

        /* CHECKED STYLES */
        [type=radio]:checked + img {
            outline: 5px solid #f00;
        }
    </style>
}


@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            

            $("#Cityname").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Mosque/Getcities",
                        type: "POST",
                        dataType: "json",
                        data: { Prefix: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.City, value: item.City };
                            }))

                        }
                    })
                },
                messages: {
                    noResults: "", results: ""
                }
            });



            $("#choosedesign").click(function () {
                if ($('input[name="design"]:checked').val() == "horizontal") {
                    $('#designclick').modal('show');
                } else {
                    $('#designclickvertical').modal('show');
                }

            });

            $('#btnSaveChanges').click(function () {
                $("#designname").val($('input[name="hd"]:checked').val());
                $('#designclick').modal('hide');


            });

            $('#btnSaveChangesvertical').click(function () {

                $("#designname").val($('input[name="vd"]:checked').val());
                $('#designclickvertical').modal('hide');


            });

        })
    </script>
}

