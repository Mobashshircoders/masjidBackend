            @Html.EditorFor(model => model.Masjidname, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Masjid Name" } })
        </div>

        <div class="col-md-6">
            @Html.DropDownList("Languageid", ViewBag.LanguageInputId as SelectList, "Select Language", new { @class = "form-control", name = "LanguageInputId" })
        </div>
    </div>
    <div class="row" style="height:40px;">

    </div>
