            @Html.EditorFor(model => model.Cityname, new { htmlAttributes = new { @class = "form-control", name = "Cityname", id = "Cityname", placeholder = "Enter City" } })
        </div>
    </div>


    <div class="row" style="height:30px;">

    </div>
    <div class="row">
        <div class="col-md-4">
            <span>Horizontal Design: </span> @Html.RadioButton("design", "horizontal", true)
            <span> |       Vertical Design: </span> @Html.RadioButton("design", "vertical", false)
        </div>

    </div>
    <div class="row" style="height:10px;">

    </div>

    <div class="row">
        <div class="col-md-4">
            <button type="button" class="btn btn-primary" id="choosedesign">Choose Design</button>
        </div>
    </div>

    <div class="row" style="height:40px;">

    </div>

    <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-2">
            <input type="submit" value="Update Mosque data" class="btn btn-primary" />
        </div>
        <div class="col-md-5"></div>
    </div>



}

