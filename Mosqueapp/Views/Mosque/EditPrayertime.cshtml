@model Mosqueapp.Models.Mosquedata
@{
    ViewBag.Title = "EditPrayertime";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Edit Prayertime</h4>

@using (Html.BeginForm())
{

    @Html.HiddenFor(x => x.Masjidid)

    <div class="row" style="height:10px;">

    </div>
    
    <div class="row">
