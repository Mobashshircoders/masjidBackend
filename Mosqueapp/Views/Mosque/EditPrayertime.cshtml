            <label style="color:black; font-size:16px;">Fajr timing </label>
        </div>
        <div class="col-md-4">
            @Html.LabelFor(model => model.Fajrazaan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.Fajrazaan, new { htmlAttributes = new { @class = "form-control", id = "txtfajrazaan" } })
        </div>
        
        <div class="col-md-4">
            @Html.LabelFor(model => model.Fajrnamaaz, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.Fajrnamaaz, new { htmlAttributes = new { @class = "form-control", id = "txtfajrnamaaz" } })
        </div>

    </div>
    
    <div class="row">
        <div class="col-md-4">
            <label style="color:black; font-size:16px;">Dhuhr timing </label>
        </div>
        <div class="col-md-4">
            @Html.LabelFor(model => model.Dhuhrazaan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.Dhuhrazaan, new { htmlAttributes = new { @class = "form-control", id = "txtdhuhrazaan" } })
        </div>
        
        <div class="col-md-4">
            @Html.LabelFor(model => model.Dhuhrnamaaz, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.Dhuhrnamaaz, new { htmlAttributes = new { @class = "form-control", id = "txtdhuhrnamaaz" } })
        </div>
    </div>

   
    <div class="row">
        <div class="col-md-4">
            <label style="color:black; font-size:16px;">Asr timing </label>
        </div>
        <div class="col-md-4">
            @Html.LabelFor(model => model.Asrazaan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.Asrazaan, new { htmlAttributes = new { @class = "form-control", id = "txtasrazaan" } })
        </div>
        
        <div class="col-md-4">
            @Html.LabelFor(model => model.Asrnamaaz, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.Asrnamaaz, new { htmlAttributes = new { @class = "form-control", id = "txtasrnamaaz" } })
        </div>
    </div>
    
    <div class="row">
