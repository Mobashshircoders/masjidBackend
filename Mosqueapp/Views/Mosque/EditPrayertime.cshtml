        </div>
       
        <div class="col-md-4">
            @Html.LabelFor(model => model.Maghribnamaaz, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.Maghribnamaaz, new { htmlAttributes = new { @class = "form-control", id = "txtmaghribnamaaz" } })
        </div>
    </div>
  
    <div class="row">
        <div class="col-md-4">
            <label style="color:black; font-size:16px;">Isha timing </label>
        </div>
        <div class="col-md-4">
            @Html.LabelFor(model => model.Ishaazaan, new { htmlAttributes = new { @class = "form-control" } })
