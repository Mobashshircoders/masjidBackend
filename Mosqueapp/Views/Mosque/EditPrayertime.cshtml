<script type="text/javascript">
    $(document).ready(function () {
        $('#txtfajrazaan').timepicker();
        $('#txtfajrnamaaz').timepicker();
        $('#txtdhuhrazaan').timepicker();
        $('#txtdhuhrnamaaz').timepicker();
        $('#txtasrazaan').timepicker();
        $('#txtasrnamaaz').timepicker();
        $('#txtmaghribazaan').timepicker();
        $('#txtmaghribnamaaz').timepicker();
        $('#txtishaazaan').timepicker();
        $('#txtishanamaaz').timepicker();
        $('#txtjumanamaaz').timepicker();
        $('#txtshuruqtime').timepicker();


    });
</script>

