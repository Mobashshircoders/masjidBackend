    </div>
    

    <div class="row">
        <div class="col-md-4">
            <label style="color:black; font-size:16px;">Jumua and Shuruq</label>
        </div>
        <div class="col-md-4">
            @Html.LabelFor(model => model.AlJumuanamaaz, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.AlJumuanamaaz, new { htmlAttributes = new { @class = "form-control", id = "txtjumanamaaz" } })
        </div>
        
